{
  "manifest_version": 2,

  "name": "Twixer",
  "version": "1.0.0",
  "description": "Add your followed Mixer streamers to your Twitch.tv sidebar",
  "author": "Brian A. Purgert II",
  "icons": {
    "16": "icons/16.png",
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup.html",
    "default_title": "Twixer"
  },
  "permissions": [
    "identity",
    "tabs",
    "webNavigation",
    "*://*.mixer.com/*",
    "*://*.twitch.tv/*",
    "*://*.google.com/*",
    "storage",
    "alarms"
  ],

  "content_scripts": [{
    "css": ["twixer.css"],
    "js": ["content.js"],
    "matches": ["*://*.twitch.tv/*","*://*.mixer.com/*"],
    "run_at": "document_idle"
  }],
  "web_accessible_resources": [
    "twixer.css",
    "/oauth2/*",
    "fonts/Roobert-Bold.woff2",
    "fonts/Roobert-Regular.woff",
    "fonts/Roobert-Regular.woff2",
    "fonts/Roobert-SemiBold.woff",
    "fonts/Roobert-SemiBold.woff2"
  ],
  "background": {
    "scripts": ["eventPage.js","background.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self' https://mixer.com/*",
  "key": ""
}
