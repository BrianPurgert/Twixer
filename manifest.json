{
  "manifest_version": 2,

  "name": "Twixer",
  "version": "0.1.0",
  "description": "Add your followed Mixer streamers to your Twitch.tv sidebar",
  "author": "Brian A. Purgert II",
  "icons": {
    "16": "icons/16.png",
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Twixer"
  },
  "permissions": [
    "identity",
    "tabs",
    "webNavigation",
    "https://mixer.com/*",
    "https://twitch.tv/*",
    "*://*.google.com/*",
    "storage",
    "alarms"
  ],

  "content_scripts": [{
    "css": ["styles.css","twitch.css"],
    "js": ["content.js"],
    "matches": ["https://www.twitch.tv/*","https://mixer.com/*"],
    "run_at": "document_idle"
  }],
  "web_accessible_resources": [
    "fonts/*.woff2",
    "/oauth2/*",
    "myimportfile1.html",
    "myimportfile2.html"
  ],
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self' https://mixer.com/*"

}
