{
  "manifest_version": 2,

  "name": "Twixer",
  "version": "2.0.0",
  "description": "Bring Twitch to Mixer streamers to your Twitch.tv sidebar, add ",
  "author": "Brian A. Purgert II",
  "icons": {
    "16": "icons/16.png",
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup.html",
    "default_title": "Twixer"
  },
  "permissions": [
    "identity",
    "identity.email",
    "tabs",
    "webNavigation",
    "*://*.mixer.com/*",
    "*://*.twitch.tv/*",
    "*://*.google.com/*",
    "storage",
    "alarms"
  ],

  "content_scripts": [
    {
    "css": ["twixer.css"],
    "js": ["content.js"],
    "matches": ["*://*.twitch.tv/*","*://*.mixer.com/*"],
    "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "twixer.css",
    "oauth/*",
    "fonts/*",
    "fonts/Roobert-Bold.woff2",
    "fonts/Roobert-Regular.woff",
    "fonts/Roobert-Regular.woff2",
    "fonts/Roobert-SemiBold.woff",
    "fonts/Roobert-SemiBold.woff2"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "oauth2": {
    "client_id": "925882476420-gg2rd7od1estoj9eksq22nim9t8mc3dj.apps.googleusercontent.com",
    "scopes":[""]
  },
  "key": "",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self' https://mixer.com/*"
}
